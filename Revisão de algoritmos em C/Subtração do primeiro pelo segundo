/******************************************************************************
(2) Escreva um programa que receba dois núumeros inteiros, calcule e mostre a subtração do primeiro pelo segundo;
*******************************************************************************/
#include <stdio.h>

int main()
{
    int x,y,sub;
   
    printf("Escreva dois números: ");
    scanf("%i", &x);
    scanf("%i", &y);
    sub = x-y;
    
    
    printf ("A subtração do primeiro pelo segundo eh: %d\n", sub);

    return 0;
}
